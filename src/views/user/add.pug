extends user_layout
block user_content
  div.flex
    a(href='/users')
      h1.text-blue-600.underline.mr-2 Users/
    h1 Add user 

  br

  form(action='add' method='POST').mt-5
    .mb-6
      label.block.mb-2.text-sm.text-gray-600(for='firstName') First Name
      input#firstName.w-full.px-3.py-2.placeholder-gray-300.border.border-gray-300.rounded-md(type='text' name='firstName' required)

    .mb-6
      label.block.mb-2.text-sm.text-gray-600(for='lastName') Last Name
      input#lastName.w-full.px-3.py-2.placeholder-gray-300.border.border-gray-300.rounded-md(type='text' name='lastName' required)

    .mb-6
      label.block.mb-2.text-sm.text-gray-600(for='email') email 
      input#email.w-full.px-3.py-2.placeholder-gray-300.border.border-gray-300.rounded-md(type='email' name='email' required)

    .mb-6
      label.block.mb-2.text-sm.text-gray-600(for='password') password 
      input#password.w-full.px-3.py-2.placeholder-gray-300.border.border-gray-300.rounded-md(type='password' name='password' required)

    .mb-6
      button.w-full.text-white.bg-blue-600.p-3(type='submit') Add

block debug
  p= debugMessage