extends auth_layout

block content_header
  .flex
    a(href='/')
      h1.text-blue-600.underline.mr-2 /
    h1 Sign up

block auth_content
  .flex.items-center.justify-center
    form(action='signup' method='POST').max-w-md
      input#firstName.w-full.border.border-gray-300.p-3(name='firstName' type='text' required placeholder='First name')
      input#lastName.w-full.border.border-gray-300.p-3(name='lastName' type='text' required placeholder='Last name')
      .m-2 
      input#email-address.w-full.border.border-gray-300.p-3(name='email' type='email' required placeholder='Email address')
      input#password.w-full.border.border-gray-300.p-3(name='password' type='password' required placeholder='Password')
      input#password2.w-full.border.border-gray-300.p-3(name='password2' type='password' required placeholder='Confirm Password')

      .mt-5
        button.w-full.text-white.bg-blue-600.p-3(type='submit') Sign up